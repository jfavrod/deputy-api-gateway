pipeline {
    agent {
        docker { image 'node:10.15-alpine' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test:jenkins'
            }
        }
    }
    post {
        always {
            junit 'report.xml'
        }
    }
}
